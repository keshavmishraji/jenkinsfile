pipeline {
  agent {
    docker {
      name 'ibmcloud'
      image 'ibmcom/ibm-cloud-developer-tools-amd64'
      }
     }
  environment {
    USERNAME = 'keshav'
    }
  stages {
    stage('Build') {
      environment {
        API_KEY = 'ISCP123'
        }
      steps {
        sh 'ls'
        sh 'env'   //env or printenv, both will print all env variables
        sh 'pwd'
       }
     }
    stage('deploy') {
      steps{
        print "hello world"
       }
      }
     }
    }
